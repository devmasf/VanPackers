<%- include ("./partials/checkout-header") %>

<div class="sr-root">
  <div class="sr-main">
    <form id="payment-form" class="form-signin">
      <div class="text-center mb-4">
        <img class="mb-4" src="/images/apple-touch-icon.png" alt="" />
        <h1 class="h3 mb-3 font-weight-normal">Registration Payment</h1>
        <p class="text-muted">
          The purpose of this payment it's to test the Stripe API, <strong>NO PAYMENT IS ACTUALLY MADE, THE APP IT'S
            COMPLETELY
            FREE TO USE</strong>
        </p>
        <p class="text-muted">Enter the following numbers in order to continue with the registration: (<strong>4242 4242
            4242
            4242</strong>) followed by random Date and CVC numbers</p>
      </div>
      <div class="sr-combo-inputs-row">
        <div class="sr-input sr-card-element" id="card-element"></div>
      </div>
      <div class="sr-field-error" id="card-errors" role="alert"></div>
      <button id="submit">
        <div class="spinner hidden" id="spinner"></div>
        <span id="button-text">Pay $<%= amount %></span><span id="order-amount"></span>
      </button>
    </form>
    <div class="sr-result hidden">
      <p>Payment completed<br /></p>
      <pre>
      <code></code>
      </pre>
    </div>
    <p id="test-message">For more information about using the Stripe API for testing purposes, please visit the
      <a href="https://stripe.com/docs/testing">Stripe
        Documentation</a></p>
  </div>
</div>

<script src="/scripts/checkout.js"></script>

<%- include ("./partials/footer_v2") %>