<%- include ("./partials/checkout-header") %>

<div class="sr-root">
  <div class="sr-main">
    <form id="payment-form" class="form-signin">
      <div class="text-center mb-4">
        <img
          class="mb-4"
          src="/images/apple-touch-icon.png"
          alt=""
          width="72"
          height="72"
        />
        <h1 class="h3 mb-3 font-weight-normal">Registration Payment</h1>
        <p class="text-muted">
          This is a test payment method with Stripe. You can enter a test credit
          card given by Stripe (4242 4242 4242 4242)
        </p>
      </div>
      <div class="sr-combo-inputs-row">
        <div class="sr-input sr-card-element" id="card-element"></div>
      </div>
      <div class="sr-field-error" id="card-errors" role="alert"></div>
      <button id="submit">
        <div class="spinner hidden" id="spinner"></div>
        <span id="button-text">Pay $<%= amount %></span
        ><span id="order-amount"></span>
      </button>
    </form>
    <div class="sr-result hidden">
      <p>Payment completed<br /></p>
      <pre>
      <code></code>
      </pre>
    </div>
  </div>
</div>

