<%- include ("../partials/header") %>

<div id="new">
  <div class="row justify-content-center">
    <div class="col-md-12 text-center mb-4">
      <h1>Create a New Campground</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <form action="/campgrounds" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name:</label>
          <input class="form-control" type="text" name="campground[name]" id="name" placeholder="Lake Louise"
            required />
        </div>
        <div class="form-group">
          <label for="image">Image:</label>
          <br>
          <input type="file" name="image" id="image" accept="image/*"
            title="Only JPG, JPEG, PNG, GIF files are allowed." required />
          <br>
          <small>Click <a href="https://unsplash.com/">here</a> to go to
            Unsplash</small>
        </div>
        <div class="form-group">
          <label for="price">Price:</label>
          <input class="form-control" type="number" name="campground[price]" id="price" placeholder="9.99" step="0.01"
            min="0" required />
        </div>
        <div class="form-group">
          <label for="location">Location:</label>
          <input class="form-control" type="text" name="campground[location]" id="location"
            placeholder="Banff National Park, AL" required />
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea name="campground[description]" type="text" id="description" cols="62" rows="5" minlength="50"
            placeholder="This is a wonderful campground with great waterfalls"></textarea>
          <!-- <input class="form-control" type="text" name="campground[description]" id="description"
            placeholder="Alberta's Rocky Mountains" minlength="50" /> -->
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit!">
          <!-- <button class="btn btn-lg btn-primary btn-block">Submit!</button> -->
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<%- include ("../partials/footer_v2") %>