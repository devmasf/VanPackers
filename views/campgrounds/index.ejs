<%- include ("../partials/header") %>

    <header class="jumbotron">
      <div class="container">
        <h1><span></span><img src="/images/logo-via-logohub.png" alt=""></h1>
        <p class="lead text-muted" id="muted">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Tempora a dicta nihil exercitationem, quidem, perferendis eligendi libero incidunt ullam eaque fugiat ex voluptate labore expedita! Ullam voluptatem praesentium qui distinctio?</p>
        <div class="d-flex align-content-end flex-wrap" style="height: 120px">
          <div class="p-2 bd-highlight">
                    <a class="btn btn-danger btn-lg" href="/campgrounds/new">Add New Campground</a>
                    <p>
                    <form action="/campgrounds" method="GET" class="form-inline" id="campground-search">
                      <div class="form-group">
                        <input type="text" name="search" placeholder="Campground search..." class="form-control">
                      </div>
                    </form>
                    </p>
          </div>
        </div>

      </div>
    </header>
    
    <div class="container">
      <div class="row text-center" id="campground-grid">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <div class="card">
            <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= campground.name %></h5>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

<%- include ("../partials/footer") %>
